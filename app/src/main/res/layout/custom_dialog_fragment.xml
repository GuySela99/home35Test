<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/propertyBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/propertyExplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Description:"
            android:textSize="14sp"
            android:gravity="start"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/propertyTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/propertyExplain"
            android:textColor="@color/link"
            android:textSize="20sp"
            android:gravity="center"
            tools:text="fdffddffdffd"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@id/propertyBox"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:id="@+id/statusBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/propertyBox">
        <TextView
            android:id="@+id/statusExplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Status:"
            android:textSize="14sp"
            android:gravity="start"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/statusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusExplain"
            android:textColor="@color/link"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="fdffddffdffd" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@id/statusBox"
        android:layout_height="1dp"
        android:background="@color/gray"/>

</RelativeLayout>